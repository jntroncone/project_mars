<h2>All Orders</h2>
<% @orders.each do |order| %>
<h2>Order <%= order.id %> </h2>
  <p>Name: <%= order.name %></p>
  <p>Email: <%= order.email %></p>
  <p>Order Status: </p>
  <p><%= link_to 'View Order', order_path(order) %></p>
  <p>Items:
   <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Product</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% render(order.line_items)%>
    </tbody>
    </table>
  </p>   
<% end %>